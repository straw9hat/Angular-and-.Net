@model WebApplication3.Models.Customer
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Customer Name</td>
            <td>@Html.TextAreaFor(m => m.Name)</td>
        </tr>
        <tr>
            <td>Customer Age</td>
            <td>@Html.TextAreaFor(m => m.Age)</td>
        </tr>
        <tr>
            <td>Customer PhoneNo</td>
            <td>@Html.TextBoxFor(m=>m.PhoneNo)</td>
        </tr>
    </table>
    <input type="submit" value="Update" />
}

